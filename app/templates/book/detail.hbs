<div class="slide-out-bg"></div>

<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "book" class="btn-back"}}
    <span class="sr-only">Back</span>
    {{/link-to}}

    <div class="slide-out-heading">
      <div class="title">
        <h3>{{model.title}}</h3>

        <div class="actions">
          <a class="button-popup">edit</a>
          <button class="btn-recessed">delete</button>
        </div>
      </div>

      <div class="details">
        <p>
          <strong>Author:</strong>
          {{#link-to "author.detail" model.author.id}}
            {{model.author.last}}, {{model.author.first}}
          {{/link-to}}
        </p>
        <p>
          <strong>Publish Date:</strong>
          {{model.publishDate}}
        </p>
        <p>
          <strong>ISBN:</strong>
          {{model.isbn}}
        </p>
      </div>
    </div>
    <div class="slide-out-content">
      {{outlet}}
    </div>
  </div>
</div>